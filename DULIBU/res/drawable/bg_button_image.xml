<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#d2d2d2" />
            <corners
                android:radius="2dp" />
            

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FFF"
                android:endColor="#FFF"
                android:angle="270" />
            <corners
                android:radius="2dp" />
            <stroke 
                android:width="3px" 
                android:color="#FFF"/>

        </shape>
    </item>
</selector>