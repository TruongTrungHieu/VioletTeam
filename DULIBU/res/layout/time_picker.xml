<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp" >
    <TimePicker 
        android:id="@+id/tpCreateTripTimePicker"
        android:headerBackground="@color/ActionBarColor"
        android:numbersBackgroundColor="@color/ActionBarColor"
        android:numbersSelectorColor="@color/ActionBarColor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_marginBottom="7dp"
        android:weightSum="2">
        <Button 
            android:id="@+id/btnDoneCreateTripTimePiker"
            android:layout_height="40dp"
            style="@style/DefaultButtonText"
            android:background="@color/transparent"
            android:text="@string/btnDoneCreateTripTimePicker"
            android:textColor="@color/StatusBarColor"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <Button 
            android:id="@+id/btnCancelCreateTripTimePiker"
            android:layout_height="40dp"
            style="@style/DefaultButtonText"
            android:background="@color/transparent"
            android:text="@string/btnCancelCreateTripTimePicker"
            android:textColor="@color/StatusBarColor"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
