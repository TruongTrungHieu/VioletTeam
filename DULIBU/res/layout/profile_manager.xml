<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnImgInfo"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/default_cover"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="20dp"
                android:alpha="50"
                android:background="@drawable/image_border_radius"
                android:src="@drawable/default_avartar" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/icon_female"
                android:text=" Maria Olala"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/lnInfomation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lnImgInfo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSOS"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="SOS"
                android:textColor="#FFF"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_name_green"
                android:drawablePadding="50dp"
                android:enabled="false"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Full Name"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_email_green"
                android:drawablePadding="50dp"
                android:enabled="false"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Email"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/etBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_dob_green"
                android:drawablePadding="50dp"
                android:enabled="false"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Birthday"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_phone_green"
                android:drawablePadding="50dp"
                android:enabled="false"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Phone"
                android:textColor="#505050"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dadada" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_contact_green"
                android:drawablePadding="50dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_white_24dp"
                android:enabled="false"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Contact"
                android:textColor="#505050"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>