<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnListTrip"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgTrip"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/trip1" />

    <LinearLayout
        android:id="@+id/lnTripInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titleTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hà Nội - Hà Giang"
            android:textColor="#505050"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lnTimeTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:text="  Từ"
                android:textColor="#878787"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTimeBeginTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  18/11/2015"
                android:textColor="#878787"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Đến"
                android:textColor="#878787"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTimeEndTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  20/11/2015"
                android:textColor="#878787"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCountMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/users"
            android:text="  12+"
            android:textColor="#878787"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>